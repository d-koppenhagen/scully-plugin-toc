{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "target": "es2015",
    "outDir": "./dist",
    "declaration": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": [],
    "lib": ["dom", "es2018"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
